@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to intelliSmart</h1>
</div>

<html>
<head>
    <style>
        body {
            background-color: lightblue;
        }

